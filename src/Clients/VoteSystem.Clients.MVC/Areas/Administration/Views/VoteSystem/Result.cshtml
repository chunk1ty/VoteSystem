@model int

@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@Html.Hidden("get-all-questionRepository-url", Url.Action<QuestionController>(c => c.GetVoteSystemResultsById(Model)))

<div class="row">
    <div class="text-center" style="padding-bottom: 20px;">
        <h2 class="my-header-title">
            Резултати
        </h2>

        <a class="btn btn-dark" href="@(Url.Action<VoteSystemController>(c => c.Index()))">
            <i class="glyphicon glyphicon-arrow-left"></i>
            Обратно
        </a>
    </div>

    <div id="root"></div>

    <script id="question-template" type="text/x-handlebars-template">
        {{#each questionRepository}}
        <div class="col-md-4 col-sm-4 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>{{questionName}}</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </li>
                        <li>
                            <a class="close-link">
                                <i class="fa fa-close"></i>
                            </a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    {{#if questionType}}
                    <span>Множествен отговор</span>
                    {{else}}
                    <span>Единичен отговор</span>
                    {{/if}}
                    <div id="echart-pie-{{@@index}}" style="height: 350px"> </div>
                </div>
            </div>
        </div>
        {{/each}}
    </script>
</div>

@section scripts {
    @Scripts.Render("~/bundles/resultController")
}