@model IList<VoteSystem.Clients.MVC.ViewModels.FillRateSystem.FillQuestionsViewModel>

@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@section styles {
    <style>
        .radio label {
            padding-left: 5px;
        }

        .my-error-class {
            color: #E74C3C;
        }
    </style>
}

@using (Html.BeginForm<FillRateSystemController>(c => c.Fill(string.Empty), FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m[0].RateSystemId)

    <div class="row">
        <div class="text-center">
            <a href="@(Url.Action<HomeController>(c => c.Index()))" class="btn btn-dark">
                <i class="glyphicon glyphicon-arrow-left"></i>
                Обратно
            </a>
            <button class="btn btn-dark" type="submit">
                <i class="glyphicon glyphicon-floppy-disk"></i>
                Изпрати
            </button>
        </div>
    </div>

    <div class="row">
        @for (int question = 0; question < Model.Count; question++)
        {
            @Html.HiddenFor(m => m[question].HasMultipleAnswers)
            @Html.HiddenFor(m => m[question].QuestionName)
            @Html.HiddenFor(m => m[question].Id)

            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>@Model[question].QuestionName</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link">
                                    <i class="fa fa-chevron-up"></i>
                                </a>
                            </li>
                            <li>
                                <a class="close-link">
                                    <i class="fa fa-close"></i>
                                </a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>

                    <div class="x_content">
                        <div>
                            @Html.ValidationMessage(Model[question].Id.ToString(), new { @class = "my-error-class" })
                        </div>
                        @for (int answer = 0; answer < Model[question].QuestionAnswers.Count; answer++)
                        {
                            if (Model[question].HasMultipleAnswers)
                            {
                                <div class="radio">
                                    @Html.CheckBoxFor(m => m[question].QuestionAnswers[answer].IsChecked, new { @class = "flat" })
                                    @Model[question].QuestionAnswers[answer].Name
                                    @Html.HiddenFor(m => m[question].QuestionAnswers[answer].Id)
                                    @Html.HiddenFor(m => m[question].QuestionAnswers[answer].Name)
                                </div>
                            }
                            else
                            {
                                <div class="radio">
                                    @Html.RadioButtonFor(m => m[question].RadioGroupAnswer, Model[question].QuestionAnswers[answer].Id, new { @class = "flat" })
                                    @Model[question].QuestionAnswers[answer].Name
                                    @Html.HiddenFor(m => m[question].QuestionAnswers[answer].Name)
                                    @Html.HiddenFor(m => m[question].QuestionAnswers[answer].Id)   
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}
