@using VoteSystem.Web.Infrastructure.Extensions

@model IEnumerable<VoteSystem.Web.ViewModels.RateSystemViewModel>

@{  
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@section styles {
    <style>
        a.paginate_button.current {
            background-color: rgba(38, 185, 154, 0.59) !important;
            border-color: rgba(38, 185, 154, 0.59) !important;
        }
    </style>
}

@Html.Hidden("delete-rate-system-url", Url.Action<AjaxController>(c => c.DeleteRateSystem(0)))

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Vote systems</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <table id="admin-grid" class="table table-striped responsive-utilities jambo_table">
                    <thead>
                        <tr>
                            <th class="col-md-1 col-sm-1 col-xs-1">Status</th>
                            <th class="col-md-3 col-sm-3 col-xs-3">System Name</th>
                            <th class="col-md-3 col-sm-3 col-xs-3">Questions</th>
                            <th class="col-md-2 col-sm-2 col-xs-2">Add Users</th>
                            <th class="col-md-3 col-sm-3 col-xs-3">Edit</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                @Html.Hidden("rate-system-" + item.Id, item.Id)
                                <td class="col-md-1 col-sm-1 col-xs-1">
                                    @Html.RateSystemStatus(item.StarDateTime, item.EndDateTime)
                                </td>
                                <td class="col-md-3 col-sm-3 col-xs-3">
                                    @item.RateSystemName
                                </td>
                                <td class="col-md-3 col-sm-3 col-xs-3">
                                    <a href="@(Url.Action<QuestionController>(c => c.Create(item.Id)))" class="btn btn-dark btn-xs">
                                        <i class="fa fa-plus"></i>
                                        Add
                                    </a>
                                    <a href="@(Url.Action<QuestionController>(c => c.Edit(item.Id)))"  class="btn btn-dark btn-xs">
                                        <i class="fa fa-pencil"></i> Edit
                                    </a>
                                </td>
                                <td class="col-md-2 col-sm-2 col-xs-2">
                                    Add users
                                </td>
                                <td class="col-md-3 col-sm-3 col-xs-3">
                                    <a href="@(Url.Action<ResultController>(c => c.Index(item.Id)))" class="btn btn-dark btn-xs">
                                        <i class="fa fa-folder"></i>
                                        Results
                                    </a>
                                    <a href="@(Url.Action<RateSystemController>(c => c.Edit(item.Id)))" class="btn btn-dark btn-xs">
                                        <i class="fa fa-pencil"></i>
                                        Edit
                                    </a>
                                    <button type="button" class="delete-btn btn btn-dark btn-xs" data-toggle="modal" data-target=".bs-example-modal-sm">
                                        <i class="fa fa-trash-o"></i> Delete
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title">Delete Vote System</h4>
            </div>
            <div class="modal-body">
                <p>
                    Are you sure you want to delete <span id="modal-content" style="color:red;"></span> vote system ?
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" id="cancel-btn" class="btn btn-default" data-dismiss="modal" style="margin: 0;">Cancel</button>
                <button type="button" id="delete-rate-system-btn" class="btn btn-danger">Yes</button>
            </div>
        </div>
    </div>
</div>