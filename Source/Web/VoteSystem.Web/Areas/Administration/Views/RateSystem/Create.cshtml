@model VoteSystem.Web.ViewModels.RateSystemViewModel

@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}


@section styles {
    @*TODO remove cdn*@
    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/bootstrap.daterangepicker/2/daterangepicker.css" />

    <style>
        .daterangepicker th {
            border-radius: 0;
        }
    </style>
 }

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>New Vote System</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br />
                @using (Html.BeginForm<RateSystemController>(c => c.Create(), FormMethod.Post, null, new { @class = "form-horizontal form-label-left" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(m => m.RateSystemName, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(m => m.RateSystemName, new { @class = "form-control col-md-7 col-xs-12" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.StarDateTime, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(m => m.StarDateTime, new { id = "start-date", @class = "form-control col-md-7 col-xs-12 has-feedback-left" })
                            <span class="fa fa-calendar-o form-control-feedback left" aria-hidden="true"></span>
                            <span id="inputSuccess2Status3" class="sr-only">(success)</span>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.EndDateTime, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(m => m.EndDateTime, new { id = "end-date", @class = "form-control col-md-7 col-xs-12 has-feedback-left" })
                            <span class="fa fa-calendar-o form-control-feedback left" aria-hidden="true"></span>
                            <span id="inputSuccess2Status3" class="sr-only">(success)</span>
                        </div>
                    </div>

                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                            @(Html.ActionLink<RateSystemController>("Cancel", c => c.Index(), null, new {@class = "btn btn-primary" }))
                            <button type="submit" class="btn btn-success">Create</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Content/bootstrap-theme/js/moment.min.js"></script>    
    <script src="~/Content/bootstrap-theme/js/datepicker/daterangepicker.js"></script>
    <script src="~/Scripts/Custom/calendars.js"></script>
}