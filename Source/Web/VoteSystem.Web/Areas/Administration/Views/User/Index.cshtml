@model VoteSystem.Web.ViewModels.UserSelectedViewModel

@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@using (Html.BeginForm<UserController>(c => c.Index(), FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <div class="text-center">
                        <button class="btn btn-dark" type="submit">Add</button>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <table id="user-grid" class="table table-striped responsive-utilities jambo_table">
                        <thead>
                            <tr>
                                <th class="col-md-1 col-sm-1 col-xs-1">
                                    <input id="example-select-all" class="tableflat" type="checkbox" name="select_all" value="1" />
                                </th>
                                <th class="col-md-2 col-sm-2 col-xs-2">
                                    Faculty number
                                </th>
                                <th class="col-md-3 col-sm-3 col-xs-3">
                                    First Name
                                </th>
                                <th class="col-md-3 col-sm-3 col-xs-3">
                                    Last Name
                                </th>
                                <th class="col-md-3 col-sm-3 col-xs-3">
                                    E-mail
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @Html.EditorFor(m => m.Users)
                        </tbody>
                    </table>
                    
                </div>
            </div>
        </div>
    </div>
}
@section scripts{
    @Scripts.Render("~/bundles/userController");    
}
