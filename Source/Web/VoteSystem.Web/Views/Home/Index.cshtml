@model IEnumerable<VoteSystem.Web.ViewModels.RateSystemViewModel>
@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h2>Active vote systems</h2>

<table>
    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <td>
                    @item.RateSystemName
                </td>
                <td>
                    @(Html.ActionLink<FillRateSystemController>("Join", c => c.Fill(item.Id)))
                </td>
            </tr>
        </tbody>
    }
</table>

@if (ViewBag.NotificationMessage != null)
{
    //TODO make it works
    @section Scripts{
        <script>
            $(function () {
                new PNotify({
                    title: "Password reset",
                    type: "success",
                    text: @((string)ViewBag.NotificationMessage)});
            });
        </script>
    }
}