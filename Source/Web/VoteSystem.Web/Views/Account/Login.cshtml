@using VoteSystem.Web.ViewModels.Account;
@using VoteSystem.Common;

@model LoginViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    string returnUrl = (string)ViewBag.ReturnUrl;
}

@section Styles {
   @Styles.Render("~/Content/forms-css")
}

<div class="row">
    <div class="col-lg-4 col-lg-offset-4">
        <h1 class="login-form">Login Form</h1>
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="my-panel-title">Use a local account to log in.</h3>
            </div>
            <div class="panel-body">
                <section id="loginForm">
                    @using (Html.BeginForm<AccountController>(c => c.Login(returnUrl), FormMethod.Post, null, new { @class = "form-horizontal", role = "form" }))                 
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="glyphicon glyphicon-user"></i>
                            </span>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Enter email address." })
                        </div>
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger", style = "padding-left: 20px" })

                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="glyphicon glyphicon-lock"></i>
                            </span>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Enter password." })
                        </div>
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger", style = "padding-left: 20px" })

                        <div class="checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe, new { @class = "remember-label-class" })
                        </div>

                        <div class="input-group" style="width: 100%; padding-top: 0">
                            <input id="submit-btn" type="submit" value="Sign in!" class="btn btn-success" style="width: 100%"/>
                        </div>
                    }
                </section>

            </div>
            <div class="panel-footer">
                <span style="padding-left: 20px">
                    @(Html.ActionLink<AccountController>("Register as a new user", c=> c.Register()))
                </span>
                @*Enable this once you have account confirmation enabled for password reset functionality*@
                <span class="pull-right" style="padding-right: 20px">
                    @(Html.ActionLink<AccountController>("Forgot your password?", c => c.ForgotPassword()))
                </span>
            </div>
        </div>
        @Html.Partial(PartialViewConstants.SocialButtonPartial)
    </div>
</div>

