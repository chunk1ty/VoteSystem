@model VoteSystem.Web.ViewModels.Manage.ChangePasswordViewModel
@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<style>
    .my-form-errors-class ul{
        padding-left: 0;
        list-style-type: none;
    }
</style>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Change Password Form</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { id = "change-password-form", @class = "form-horizontal form-label-left", role = "form", data_parsley_validate = "", novalidate = "" }))
                {
                    @Html.AntiForgeryToken()
                    //TODO remove errors per field from validation summary
                    <div class="form-group">
                        <div class="col-md-3 col-sm-3 col-xs-12"></div>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                          @Html.ValidationSummary("", new { @class = "text-danger my-form-errors-class" })
                        </div>
                    </div>
                    

                    <div class="form-group">
                        @Html.LabelFor(m => m.OldPassword, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control col-md-7 col-xs-12" })
                            @Html.ValidationMessageFor(m => m.OldPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.NewPassword, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control col-md-7 col-xs-12" })
                            @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control col-md-7 col-xs-12" })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                        </div>
                </div>

                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="text-center">
                            <button type="submit" class="btn btn-success">Change password</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }